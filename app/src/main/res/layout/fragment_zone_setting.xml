<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg">

    <include
        android:id="@+id/ly_title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_title">
        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/ll_door_6_zone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:shape_radius="10dp"
            app:shape_solidColor="@color/common_button_pressed_color">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/door_6_zone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="6区"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/ll_door_12_zone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:shape_radius="10dp"
            android:layout_marginStart="50dp"
            app:shape_solidColor="@color/gray15">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/door_12_zone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="12区"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/ll_door_18_zone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:shape_radius="10dp"
            android:layout_marginStart="50dp"
            app:shape_solidColor="@color/gray15">

            <ImageView
                android:layout_width="136dp"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/door_18_zone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="18区"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.hjq.shape.layout.ShapeLinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>